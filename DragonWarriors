    <script type="text/worker">
        const buttonlist = ["character","skills","inventory","languages","magic","release","documentation"];
        const read = ["release", "documentation"];
        buttonlist.forEach(button => {
            on(`clicked:${button}`, function() {
                console.log(`${button} button was clicked!!`);
                const settings = {};
                settings['sheetTab'] = button;
                if(read.includes(button)) settings[button] = 'read';
                setAttrs(settings);
            });
        });
    </script>
